<%- include('./partials/header.ejs') %>
<% if(error.length>0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
    <% } %>
<div class="container w-full h-screen flex px-20">
    <div class="w-1/2 flex items-center justify-center ">
        <div class="w-full px-32">
            <h4 class="text-4xl">Welcome to <span class="text-blue-400 font-semibold">Scatch</span></h4>
            <h3 class="text-2xl mb-1">Create your account</h3>
            <form action="/users/register" method="post" autocomplete="off">
                <input class="border-[1px] mt-2 border-zinc-200 w-full bg-zinc-100 px-3 py-2 rounded-md" placeholder="Full Name" type="text" name="fullname">
                <input class="border-[1px] mt-2 border-zinc-200 w-full bg-zinc-100 px-3 py-2 rounded-md" placeholder="Email" type="text" name="email">
                <input class="border-[1px] mt-2 border-zinc-200 w-full bg-zinc-100 px-3 py-2 rounded-md" placeholder="Password" type="password" name="">
                <input class="px-5 rounded-[10px] py-3 mt-2 bg-blue-500 text-white" type="submit" value="Create My Account">
            </form>
        </div>
        
    </div>
    <hr class="h-[60%] mt-[10%] border-blue-300 border-[1px] " />
    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32">
            <h3 class="text-2xl mb-1">Login your Account</h3>
            <form action="/users/login" method="post" autocomplete="off">
                <input class="border-[1px] mt-2 border-zinc-200 w-full bg-zinc-100 px-3 py-2 rounded-md" placeholder="Email" type="text" name="email">
                <input class="border-[1px] mt-2 border-zinc-200 w-full bg-zinc-100 px-3 py-2 rounded-md" placeholder="Password" type="password" name="">
                <input class="px-5 rounded-[10px] py-3 mt-2 bg-blue-500 text-white" type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>